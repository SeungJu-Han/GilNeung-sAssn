<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView01"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#E57373"
        />

    <TextView
        android:id="@+id/textView01Right"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#4DB6AC"
        android:layout_toRightOf="@id/textView01"
        />

    <TextView
        android:id="@+id/textView01Below"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="#F06292"
        android:layout_below="@id/textView01"
        />

    <TextView
        android:id="@+id/textViewCenter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#81C784"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textView01Right2"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#BA68C8"
        android:layout_toRightOf="@id/textViewCenter"
        />

    <TextView
        android:id="@+id/textView01Below2"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="#AED581"
        android:layout_below="@id/textViewCenter"
        />

    <TextView
        android:id="@+id/textViewCenterRight"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:background="#4DD0E1"
        android:layout_toRightOf="@id/textViewCenter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textViewCenterBelow"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:background="#FF8A65"
        android:layout_below="@id/textViewCenter"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>